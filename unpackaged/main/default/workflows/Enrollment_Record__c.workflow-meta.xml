<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <fieldUpdates>
        <fullName>Update_Last_Updater</fullName>
        <field>Last_Retention_Status_Updater__c</field>
        <formula>$User.FirstName +&quot; &quot;+ $User.LastName</formula>
        <name>Update Last Updater</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Retention Status Is Changed</fullName>
        <actions>
            <name>Update_Last_Updater</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>AND(
 $User.Override_Workflow__c = False, 
ISCHANGED( Retention_Status__c ))</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>
