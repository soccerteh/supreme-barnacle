<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <submitter>CEO</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Account</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>catherine@vertoeducation.org</name>
                <type>user</type>
            </approver>
            <approver>
                <name>daniel@vertoeducation.org</name>
                <type>user</type>
            </approver>
            <approver>
                <name>hillevi@vertoeducation.org</name>
                <type>user</type>
            </approver>
            <approver>
                <name>oronde@vertoeducation.org</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Make an Admissions Decision</label>
        <name>Make_an_Admissions_Decision</name>
    </approvalStep>
    <emailTemplate>System_Administrator_Templates/TE_Approval_Process_Admission</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>ispickval(StageName, &quot;Decision Ready&quot;)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approval_Process_Active_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_Approval_Process_Completion_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_Most_Recent_Admitted_Date_Time</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Stage_Admitted</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Approval_Process_Active_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Loss_Reason_Admission_Denied_by_Verto</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_Approval_Process_Completion_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Stage_Closed_Lost</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Approval_Process_Active_True</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>TE Approval Process - Admission</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Approval_Process_Active_False</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
