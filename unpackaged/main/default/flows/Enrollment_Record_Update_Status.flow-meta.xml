            <label>Cancel</label>
        </rules>
        <rules>
            <name>Rejected</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Loop1.Application_Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Sent to University</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Loop1.University_Decision__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Accept</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Student_Decision</targetReference>
            </connector>
            <label>Rejected</label>
        </rules>
        <rules>
            <name>Withdrawn</name>
            <conditionLogic>or</conditionLogic>
            <conditions>
                <leftValueReference>Loop1.Application_Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>New</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Loop1.Application_Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Pending Review</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Loop1.Application_Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Student Action Needed</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Loop1.Application_Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Review Complete</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Loop1.Application_Status__c</leftValueReference>
                <operator>EqualTo</operator>
