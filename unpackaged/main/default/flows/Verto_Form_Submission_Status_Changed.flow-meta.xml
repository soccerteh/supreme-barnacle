            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Update_Account_Passport_Information</name>
        <label>Update Account Passport Information</label>
        <locationX>50</locationX>
        <locationY>695</locationY>
        <connector>
            <targetReference>updateEnrollmentRecord</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Id</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.Enrollment_Record__r.Student_Account__c</elementReference>
            </value>
        </filters>
        <inputAssignments>
            <field>Passport_Expiration_Date__c</field>
            <value>
                <elementReference>$Record.Legal_Document_Expiration_Date__c</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Passport_Full_Legal_Name__c</field>
            <value>
                <elementReference>$Record.Legal_Full_Name__c</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Passport_Issue_Date__c</field>
            <value>
                <elementReference>$Record.Legal_Document_Issue_Date__c</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Passport_Issuing_Country__c</field>
            <value>
                <elementReference>$Record.Legal_Document_Issuing_Country__c</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Passport_Number__c</field>
            <value>
                <elementReference>$Record.Passport_Number__c</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Passport_Sex__c</field>
            <value>
                <elementReference>PassportSexAbbreviation</elementReference>
            </value>
        </inputAssignments>
        <object>Account</object>
    </recordUpdates>
    <recordUpdates>
        <description>Updates the Enrollment Record associated with the form, specifically any passport related fields.</description>
        <name>updateEnrollmentRecord</name>
        <label>updateEnrollmentRecord</label>
        <locationX>182</locationX>
        <locationY>911</locationY>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Id</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.Enrollment_Record__c</elementReference>
            </value>
        </filters>
        <inputAssignments>
            <field>Passport_Status__c</field>
            <value>
                <elementReference>$Record.Status__c</elementReference>
            </value>
        </inputAssignments>
        <object>Enrollment_Record__c</object>
    </recordUpdates>
    <start>
        <locationX>419</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Flow_Skip_Check</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Status__c</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <filters>
            <field>Status__c</field>
            <operator>NotEqualTo</operator>
            <value>
                <stringValue>Submitted</stringValue>
            </value>
        </filters>
        <object>Verto_Form_Submission__c</object>
        <recordTriggerType>Update</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
