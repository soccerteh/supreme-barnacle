    <decisions>
        <name>New_or_Updated_Counseling</name>
        <label>New or Updated Counseling</label>
        <locationX>182</locationX>
        <locationY>311</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Counseling_Status_is_Withdrew_or_Dismissed</name>
            <conditionLogic>1 AND (2 OR 3)</conditionLogic>
            <conditions>
                <leftValueReference>isStatusChanged</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Counseling_Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Withdrew</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Counseling_Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Dismissed</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_the_Stage_Withdrew_or_Dismissed</targetReference>
            </connector>
            <label>Counseling Status is Withdrew or Dismissed</label>
        </rules>
    </decisions>
    <formulas>
        <name>CounselingName</name>
        <dataType>String</dataType>
        <expression>{!$Record.Student_s_Account__r.Name} + &#39; &#39; + TEXT(DATEVALUE({!$Record.CreatedDate})) + &#39; - &#39; + {!$Record.RecordType.Name}</expression>
    </formulas>
    <formulas>
        <description>Determines if the Counseling Status was updated</description>
        <name>isStatusChanged</name>
        <dataType>Boolean</dataType>
        <expression>ISCHANGED({!$Record.Counseling_Status__c})</expression>
    </formulas>
    <interviewLabel>New or Updated Counseling Record {!$Flow.CurrentDateTime}</interviewLabel>
